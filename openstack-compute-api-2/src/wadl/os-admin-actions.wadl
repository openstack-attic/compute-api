        </request>
        <response status="202"/>
    </method>
    <method name="POST" id="lock">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN"
            title="Lock Server">
            <para>Locks a server. Specify the <code>lock</code> action
