    <method name="POST" id="evacuate">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
            <para role="shortdesc">Evacuates a server from failed
                host. Specify the <code>evacuate</code> action in the
                request body.</para>
        </wadl:doc>
        <request>
            <param name="host" style="query" required="true"
                type="xsd:string">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">The name
                        or ID of the host where the server is
                        evacuated.</p></doc>
            </param>
            <param name="onSharedStorage" style="query"
                type="xsd:string">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">Required
                        if server is on shared storage.</p></doc>
            </param>
            <param name="adminPass" style="query" type="xsd:string">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">Not
                        specified with onSharedStorage. New admin
                        password for the evacuated instance.</p></doc>
            </param>
            <representation mediaType="application/json">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="../samples/server-evacuate-req.json"/>
                </wadl:doc>
            </representation>
            <representation mediaType="application/xml">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="../samples/server-evacuate-req.xml"/>
                </wadl:doc>
            </representation>
        </request>
        <response status="200">
            <representation mediaType="application/json">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="../samples/server-evacuate-resp.json"/>
                </wadl:doc>
            </representation>
            <representation mediaType="application/xml">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="../samples/server-evacuate-resp.xml"/>
                </wadl:doc>
            </representation>
        </response>
    </method>
