    <method name="POST" id="createBackup">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN"
            title="Back up Server Instance">
            <para>Backs up a server instance. Specify the
                    <code>createBackup</code> action in the request
                body. </para>
        </wadl:doc>
        <request>
            <param name="name" style="query" required="true"
                type="xsd:string">
                <doc xml:lang="EN"> Name of the backup image. </doc>
            </param>
            <param name="backup_type" style="query" required="true"
                type="xsd:string">
                <doc xml:lang="EN"> The backup type. Either 'daily' or
                    'weekly.' </doc>
            </param>
            <param name="rotation" style="query" required="true"
                type="xsd:int">
                <doc xml:lang="EN"> An integer value that represents
                    the number of backups to maintain. </doc>
            </param>
            <representation mediaType="application/xml"
                element="compext:action">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/admin-actions-backup-server.json"
                    />
                </doc>
            </representation>
            <representation mediaType="application/xml"
                element="compext:action">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/admin-actions-backup-server.xml"
                    />
                </doc>
            </representation>
        </request>
        <response status="202"/>
    </method>
    <method name="POST" id="os-migrateLive">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN"
            title="Live-Migrate Server">
            <para role="shortdesc">Live-migrates a server to a new host without
                rebooting. Specify the <code>os-migrateLive</code>
                action in the request body. </para>
            <para>You can complete the following types of migrations:
                <itemizedlist><listitem><para>Live migrate with block storage migration (this operation)
                </para></listitem><listitem><para>Live migrate without block storage migration (this operation)</para></listitem>
                    <listitem><para>Non-live migrate</para></listitem>
                    <listitem><para>Resize</para></listitem>
                </itemizedlist></para>
            <para>Depending on your cloud provider, this operation might result in billing you for a snapshot. 
                You can delete the snapshot after you complete this operation.</para>
        </wadl:doc>
        <request>
            <param name="host" style="query" required="true"
                type="xsd:string">
                <doc xml:lang="EN">Name of the new host. </doc>
            </param>
            <param name="block_migration" style="query"
                required="true" type="xsd:boolean">
                <doc>If true, block storage is migrated. If false,
                    block storage is not migrated.</doc>
            </param>
            <param name="disk_over_commit" style="query"
                required="true" type="xsd:boolean">
                <doc>If true, disk over commit is allowed.</doc>
            </param>
            <representation mediaType="application/xml"
                element="compext:action">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/admin-actions-live-migrate.json"
                    />
                </doc>
            </representation>
            <representation mediaType="application/xml"
                element="compext:action">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/admin-actions-live-migrate.xml"
                    />
                </doc>
            </representation>
        </request>
        <response status="202"/>
    </method>
    <method name="POST" id="os-resetState">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN"
            title="Reset Server State">
            <para>Resets the state of a server to a specified state.
                Specify the <code>os-resetState</code> action in the
                request body. </para>
        </wadl:doc>
        <request>
            <param name="state" style="query" required="true"
                type="xsd:string">
                <doc xml:lang="EN">The desired state of a server.
                </doc>
            </param>
            <representation mediaType="application/xml"
                element="compext:action">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/admin-actions-reset-server-state.json"
                    />
                </doc>
            </representation>
            <representation mediaType="application/xml"
                element="compext:action">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/admin-actions-reset-server-state.xml"
                    />
                </doc>
            </representation>
        </request>
        <response status="202"/>
    </method>
    <method name="POST" id="evacuate">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN"
            title="Evacuate Server">
            <para>Evacuates a server from failed host. Specify the
                    <code>evacuate</code> action in the request
                body.</para>
        </wadl:doc>
        <request>
            <param name="host" style="query" required="true"
                type="xsd:string">
                <doc>
                    <p xmlns="http://www.w3.org/1999/xhtml">The name
                        or ID of the host where the server is
                        evacuated.</p>
                </doc>
            </param>
            <param name="onSharedStorage" style="query"
                type="xsd:string">
                <doc>
                    <p xmlns="http://www.w3.org/1999/xhtml">Required
                        if server is on shared storage.</p>
                </doc>
            </param>
            <param name="adminPass" style="query" type="xsd:string">
                <doc xml:lang="EN">Not specified with onSharedStorage.
                    New admin password for the evacuated instance.
                </doc>
            </param>
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/server-evacuate-req.json"/>
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/server-evacuate-req.xml"/>
                </doc>
            </representation>
        </request>
        <response status="200">
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/server-evacuate-resp.json"/>
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../samples/server-evacuate-resp.xml"/>
                </doc>
            </representation>
        </response>
    </method>
</application>
