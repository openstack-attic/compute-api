    <method name="POST" id="createBackup">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
            <para role="shortdesc">Backs up a server instance. Specify
                the <code>createBackup</code> action in the request
                body.</para>
        </wadl:doc>
        <request>
            <param name="name" style="query" type="xsd:string"
                required="true">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">Name of
                        the backup image.</p></doc>
            </param>
            <param name="backup_type" style="query" required="true"
                type="xsd:string">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">The
                        backup type. Either 'daily' or
                    'weekly.'</p></doc>
            </param>
            <param name="rotation" style="query" required="true"
                type="xsd:int">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">An
                        integer value that represents the number of
                        backups to maintain.</p></doc>
            </param>
            <representation mediaType="application/json">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../api_samples/os-admin-actions/admin-actions-backup-server.json"
                    />
                </doc>
            </representation>
            <representation mediaType="application/xml">
                <doc xml:lang="EN">
                    <xsdxt:code
                        href="../api_samples/os-admin-actions/admin-actions-backup-server.xml"
                    />
                </doc>
            </representation>
        </request>
        <response status="202"/>
    </method>
    <method name="POST" id="os-migrateLive">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
            <para role="shortdesc">Live-migrates a server to a new
                host without rebooting. Specify the
                    <code>os-migrateLive</code> action in the request
                body.</para>
        </wadl:doc>
        <request>
            <param name="host" style="query" required="true"
                type="xsd:string">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">Name of
                        the new host.</p></doc>
            </param>
            <param name="block_migration" style="query"
                required="true" type="xsd:boolean">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">If true,
                        migration is blocked.</p></doc>
            </param>
            <param name="disk_over_commit" style="query"
                required="true" type="xsd:boolean">
                <doc><p xmlns="http://www.w3.org/1999/xhtml">If true,
                        disk over commit is allowed.</p></doc>
            </param>
            <representation mediaType="application/json">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="../api_samples/os-admin-actions/admin-actions-live-migrate.json"
                    />
                </wadl:doc>
            </representation>
            <representation mediaType="application/xml">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="../api_samples/os-admin-actions/admin-actions-live-migrate.xml"
                    />
                </wadl:doc>
            </representation>
        </request>
        <response status="202"/>
    </method>
    <method name="POST" id="os-resetState">
